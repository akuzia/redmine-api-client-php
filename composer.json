{
    "name": "muxx/redmine-api-client-php",
    "description": "PHP API client for Redmine",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ilyas Salikhov",
            "email": "salikhoff@gmail.com"
        }
    ],
    "require": {
        "php": "^8",
        "ext-json": "*",
        "psr/http-client": "^1.0",
        "psr/http-client-implementation": "*",
        "psr/http-factory": "^1.0",
        "psr/http-factory-implementation": "*"
    },
    "autoload": {
        "psr-0": {
            "Redmine\\": "lib/",
            "Redmine\\Test": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "nyholm/psr7": "^1.5",
        "php-http/mock-client": "^1.5"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}